# /etc/systemctl/system/defender_os_server.service
[Unit]
Description=Gunicorn instance to serve Flask DefenderOS Server
After=network.target

[Service]
User=pi
Group=www-data
WorkingDirectory=/home/pi/defender-os/python
ExecStart=gunicorn --workers 3 --bind 0.0.0.0:5000 server:app

[Install]
WantedBy=multi-user.target
